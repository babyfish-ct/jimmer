export org.babyfish.jimmer.sql.kt.model.TreeNode

RecursiveTree {
    name
    childNodes*
}

input TreeNodeInput {
    #allScalars(TreeNode)
    id!
    /**
     * Associated parent id
     */
    id(parent)
}

FlatTreeNode {
    #allScalars
    flat(parent) {
        as(^ -> parent) {
            #allScalars
        }
        id(parent) as grandParentId
    }
}


specification TreeNodeFlatSpecification {
    flat(parent) {
        flat(parent) {
            flat(parent) {
                flat(parent) {
                    name as pppName
                }
            }
        }
    }
}